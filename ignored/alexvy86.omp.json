{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "palette": {
    "os": "#ACB0BE",
    "black": "#262B44",
    "blue": "#4B95E9",
    "success": "#59C9A5",
    "green": "#00FF00",
    "cyan": "#00FFFF",
    "orange": "#F07623",
    "red": "#D81E5B",
    "white": "#E0DEF4",
    "yellow": "#F3AE35",
    "magenta": "#FF00FF",
    "purple": "#8800dd"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "exit",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "foreground": "p:white",
          "background": "p:success",
          "background_templates": [
            "{{ if gt .Code 0 }}p:red{{ end }}"
          ],
          "template": "{{ if gt .Code 0 }}\uf00d{{ else }}\uf00c{{ end }} ",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "foreground": "p:white",
          "background": "p:success",
          "background_templates": [
            "{{ if gt .Code 0 }}p:red{{ end }}"
          ],
          "template": " {{ .FormattedMs }} ",
          "trailing_diamond": "\ue0b4",
          "properties": {
            "always_enabled": true,
            "style": "austin"
          }
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "p:orange",
          "template": "<p:white>[</>{{ .CurrentDate | date .Format }}<p:white>]</> ",
          "properties": {
            "time_format": "15:04:05"
          }
        },
        {
          "type": "os",
          "style": "plain",
          "foreground": "p:white",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} "
        },
        {
          "type": "shell",
          "style": "plain",
          "foreground": "p:white",
          "template": "<p:blue>{{ .Name }}</> "
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:white",
          "powerline_symbol": "\ue0b0",
          "template":"{{ if .SSHSession }}\uf817 {{ end }}<p:green>{{ .UserName }}</>@<p:magenta>{{ .HostName }}</> "
        },
        {
          "type": "path",
          "style": "plain",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:success",
          "template": "{{ .Path }} ",
          "properties": {
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:yellow",
          "template": "{{ if .UpstreamURL }}{{ url .UpstreamIcon .UpstreamURL }} {{ end }}{{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "properties": {
            "branch_max_length": 25,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "github_icon": "\uf7a3" // Smaller version, occupies less horizontal space
          }
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "p:green",
          "template": "\uf898 {{ .Full }}",
          "properties": {
            "display_mode": "files"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:white",
          "template": "<p:cyan>{{ .PromptCount }}</> {{ if .Root }}#{{else}}${{end}}"
        }
      ]
    }
  ],
  "tooltips": [
    {
      "type": "az",
      "tips": [
        "az"
      ],
      "style": "diamond",
      "foreground": "p:white",
      "background": "p:blue",
      "leading_diamond": "\ue0b0",
      "trailing_diamond": "\ue0b4",
      "template": " \ufd03 {{ .Name }} ",
      "properties": {
        "display_default": true
      }
    }
  ],
  "secondary_prompt": {
    "foreground": "p:black",
    "background": "transparent",
    "template": "<p:yellow> > </>"
  }
}
