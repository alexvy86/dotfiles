{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "background": "#1f1f1f",
    "separator": "#7a7a7a",
    "success": "#59C9A5",
    "error": "#D81E5B",
    "white": "#fafafa",
    "light-gray": "#B5B2C2",
    "orange": "#F07623",
    "yellow": "#ffeb3b",
    "node-green": "#6CA35E",
    "green": "#00FF00",
    "teal": "#2EC4B6",
    "cyan": "#00FFFF",
    "ocean-blue": "#26C6DA",
    "blue": "#0077c2",
    "magenta": "#FF00FF",
    "purple": "#8A4FFF"
  },
  "var": {
    "Separator": "<p:separator> \ue0b1 </>"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "template": " {{ if gt .Code 0 }}<p:error>\uf00d</>{{ else }}<p:success>\uf00c</>{{ end }} ",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "p:success",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:error{{ end }}"
          ],
          "template": "{{ .FormattedMs }}",
          "properties": {
            "always_enabled": true,
            "style": "austin"
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:ocean-blue",
          "template": "\u256d\u2500"
        },
        {
          "type": "os",
          "style": "diamond",
          "background": "p:background",
          "foreground": "p:ocean-blue",
          "leading_diamond": "\ue0b6",
          "properties": {
            "alpine": "\uf300",
            "arch": "\uf303",
            "centos": "\uf304",
            "debian": "\uf306",
            "elementary": "\uf309",
            "fedora": "\uf30a",
            "gentoo": "\uf30d",
            "linux": "\ue712",
            "macos": "\ue711",
            "manjaro": "\uf312",
            "mint": "\uf30f",
            "opensuse": "\uf314",
            "raspbian": "\uf315",
            "ubuntu": "\uf31c",
            "windows": "\ue70f"
          },
          "template": "{{ .Icon }}{{ if .WSL }} (WSL){{ end }}"
        },
        {
          "type": "shell",
          "style": "plain",
          "foreground": "p:blue",
          "background": "p:background",
          "template": "{{ .Var.Separator }}{{ .Name }}"
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:white",
          "background": "p:background",
          "template": "{{ .Var.Separator }}{{ if ne .Env.POSH_SESSION_DEFAULT_USER .UserName }}<p:green>{{ .UserName }}</> @ {{ end }}<p:magenta>{{ .HostName }}</>"
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "p:yellow",
          "background": "p:background",
          "template": " \uf0e7"
        },
        {
          "type": "path",
          "style": "plain",
          "background": "p:background",
          "foreground": "p:white",
          "properties": {
            "folder_icon": "<p:light-grey>\ue5fe </>",
            "style": "full"
          },
          "template": "{{ .Var.Separator }}<p:yellow>\ue5ff </>{{ .Path }}"
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "p:node-green",
          "background": "p:background",
          "template": "{{ .Var.Separator }}\uf898 {{ .Full }}",
          "properties": {
            "display_mode": "files"
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "background": "p:background",
          "foreground": "p:yellow",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:yellow{{ end }}",
            "{{ if gt .Ahead 0 }}p:teal{{ end }}",
            "{{ if gt .Behind 0 }}p:purple{{ end }}"
          ],
          "trailing_diamond": "\ue0b4",
          "template": "{{ .Var.Separator }}{{ if .UpstreamURL }}{{ url .UpstreamIcon .UpstreamURL }} {{ end }}{{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}<p:orange> \uf044 {{ .Working.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<p:green> \uf046 {{ .Staging.String }}</>{{ end }} ",
          "properties": {
            "branch_max_length": 25,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "github_icon": "\uf7a3" // Smaller version, occupies less horizontal space
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:ocean-blue",
          "template": "\u2570\u2500 {{ .PromptCount }} <p:white>\u276f</>"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}}root :: {{end}}{{.Shell}} :: {{.Folder}}",
  "final_space": true,
  "transient_prompt": {
    "foreground": "p:white",
    "template": " {{ if gt .Code 0 }}<p:error>\uf00d{{ else }}<p:success>\uf00c{{ end }} {{ .Segments.Executiontime.FormattedMs }}</>\n[<p:ocean-blue>{{ .PromptCount }}</>][<p:orange>{{ now | date \"15:04:05\" }}</>] "
  },
  "version": 2
}
