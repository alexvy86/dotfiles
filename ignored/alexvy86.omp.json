{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "background": "#1f1f1f",
    "blue": "#0077c2",
    "cyan": "#00FFFF",
    "error": "#D81E5B",
    "green": "#00FF00",
    "light-gray": "#B5B2C2",
    "magenta": "#FF00FF",
    "node-green": "#6CA35E",
    "ocean-blue": "#26C6DA",
    "orange": "#F07623",
    "purple": "#8A4FFF",
    "separator": "#7a7a7a",
    "success": "#59C9A5",
    "teal": "#2EC4B6",
    "white": "#fafafa",
    "yellow": "#ffeb3b"
  },
  "var": {
    "Separator": "<p:separator> \ue0b1 </>"
  },
  "transient_prompt": {
    "template": " {{ if gt .Code 0 }}<p:error>\uf00d ({{ .Code }}){{ else }}<p:success>\uf00c{{ end }} {{ .Segments.Executiontime.FormattedMs }}</>\n[<p:ocean-blue>{{ .PromptCount }}</>][<p:orange>{{ now | date \"15:04:05\" }}</>] ",
    "foreground": "p:white"
  },
  "console_title_template": "{{if .Root}}root :: {{end}}{{.Shell}} :: {{.Folder}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": " {{ if gt .Code 0 }}<p:error>\uf00d ({{ .Code }})</>{{ else }}<p:success>\uf00c</>{{ end }} ",
          "type": "status"
        },
        {
          "properties": {
            "always_enabled": true,
            "style": "austin"
          },
          "style": "plain",
          "template": "{{ .FormattedMs }}",
          "foreground": "p:success",
          "type": "executiontime",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:error{{ end }}"
          ]
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "style": "plain",
          "template": "\u256d",
          "foreground": "p:ocean-blue",
          "type": "text"
        },
        {
          "properties": {
            "alpine": "\uf300",
            "arch": "\uf303",
            "centos": "\uf304",
            "debian": "\uf306",
            "elementary": "\uf309",
            "fedora": "\uf30a",
            "gentoo": "\uf30d",
            "linux": "\ue712",
            "macos": "\ue711",
            "manjaro": "\uf312",
            "mint": "\uf30f",
            "opensuse": "\uf314",
            "raspbian": "\uf315",
            "ubuntu": "\uf31c",
            "windows": "\ue70f"
          },
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "template": "{{ .Icon }}{{ if .WSL }} (WSL){{ end }} ",
          "foreground": "p:ocean-blue",
          "background": "p:background",
          "type": "os"
        },
        {
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "template": "{{ .Name }}",
          "foreground": "p:blue",
          "background": "p:background",
          "type": "shell"
        },
        {
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "template": "{{ if ne .Env.POSH_SESSION_DEFAULT_USER .UserName }}<p:green>{{ .UserName }}</> @ {{ end }}<p:magenta>{{ .HostName }}</>{{ if .Root }} <p:yellow>\uf0e7</>{{ end }}",
          "foreground": "p:white",
          "background": "p:background",
          "type": "session"
        },
        {
          "properties": {
            "folder_icon": "<p:light-grey>\ue5fe </>",
            "style": "full"
          },
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "template": "<p:yellow>\ue5ff </>{{ .Path }}",
          "foreground": "p:white",
          "background": "p:background",
          "type": "path"
        },
        {
          "properties": {
            "display_mode": "files",
            "fetch_package_manager": true
          },
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "template": "{{ .PackageManagerIcon }} {{ .Full }}",
          "foreground": "p:node-green",
          "background": "p:background",
          "type": "node"
        },
        {
          "properties": {
            "branch_template": "{{ truncE 35 .Branch }}",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "template": "{{ if .UpstreamURL }}{{ url .UpstreamIcon .UpstreamURL }} {{ end }}{{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}<p:orange> \uf044 {{ .Working.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<p:green> \uf046 {{ .Staging.String }}</>{{ end }}",
          "foreground": "p:yellow",
          "background": "p:background",
          "type": "git",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:yellow{{ end }}",
            "{{ if gt .Ahead 0 }}p:teal{{ end }}",
            "{{ if gt .Behind 0 }}p:purple{{ end }}"
          ]
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "style": "plain",
          "template": "\u2570 {{ .PromptCount }} <p:white>‚ùØ</>",
          "foreground": "p:ocean-blue",
          "type": "text"
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}
